{
    "compilerOptions": {
        "jsx": "react",
        "allowJs": true,
        "checkJs": true,
        // "module": "nodenext",
        "outDir": "dist",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "verbatimModuleSyntax": false,
        "target": "ES6",
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
          "*": ["node_modules/*"]
        }
      },
    "include": ["src/**/*", "test", "main.ts"]
}