{
    "compilerOptions": {
        "jsx": "react-jsx",
        "allowJs": true,
        "checkJs": true,
        // "module": "nodenext",
        "outDir": "dist",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "verbatimModuleSyntax": false,
        "target": "ESNext",
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        // "paths": {
        //   "*": ["node_modules/*"]
        // }
    }
    // "include": ["src/**/*", "test", "index.ts"]
}